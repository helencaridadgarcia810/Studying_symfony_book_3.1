{# app/Resources/views/admin/genus/list.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
        </tr>
        </thead>
        <tbody>
            {% for genus in genuses %}
                <tr>
                    <td>{{ genus.name }}</td>
                    <td>{{ genus.subFamily }}</td>
                    <td>{{ genus.speciesCount }}</td>
                    <td>
                        <a href="{{ path('admin_genus_edit', {'id': genus.id}) }}"> Edit </a>
                        {#<a href="{{ path('admin_genus_edit', {'id': genus.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>#}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}